{
  "name": "abap-api-tools",
  "description": "ABAP api tools",
  "version": "2.3.1",
  "homepage": "https://github.com/sap/fundamental-tools",
  "author": "SAP",
  "license": "Apache-2.0",
  "engines": {
    "node": ">= 14.0"
  },
  "cpu": [
    "!arm"
  ],
  "directories": {
    "doc": "doc",
    "test": "test"
  },
  "main": "dist/abap.js",
  "types": "dist/abap.d.ts",
  "bin": {
    "abap": "dist/abap.js"
  },
  "files": [
    "package.json",
    "dist"
  ],
  "type": "commonjs",
  "scripts": {
    "ts": "tsc -p src/ts && cp -r src/configuration dist/.",
    "lint": "eslint src/ts",
    "dep": "npm i --save chalk js-yaml loglevel sprintf-js yargs node-rfc abap-value-help",
    "devDep": "npm i --save-dev @types/node @types/js-yaml @types/sprintf-js @types/yargs @typescript-eslint/eslint-plugin @typescript-eslint/parser eslint jest typescript",
    "build": "reuse lint && rm -rf dist && npm run ts && npm run lint",
    "lock": "npm install --package-lock-only",
    "test": "jest tests --detectOpenHandles"
  },
  "keywords": [
    "sap",
    "sapcloudplatform",
    "abap",
    "rfc",
    "sapnwrfc",
    "nwrfcsdk",
    "node",
    "nodejs"
  ],
  "devDependencies": {
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^18.7.4",
    "@types/sprintf-js": "^1.1.2",
    "@types/yargs": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "@typescript-eslint/parser": "^5.33.0",
    "eslint": "^8.22.0",
    "jest": "^28.1.3",
    "typescript": "^4.7.4"
  }
}
