{
  "name": "abap-api-tools",
  "version": "2.4.0",
  "description": "ABAP api tools",
  "keywords": [
    "sap",
    "sapcloudplatform",
    "abap",
    "rfc",
    "sapnwrfc",
    "nwrfcsdk",
    "node",
    "nodejs"
  ],
  "homepage": "https://github.com/sap/fundamental-tools",
  "license": "Apache-2.0",
  "author": "SAP",
  "type": "commonjs",
  "main": "dist/abap.js",
  "types": "dist/abap.d.ts",
  "bin": {
    "abap": "dist/abap.js"
  },
  "directories": {
    "doc": "doc",
    "test": "test"
  },
  "files": [
    "package.json",
    "dist"
  ],
  "scripts": {
    "build": "reuse lint && rm -rf dist && npm run ts && npm run lint",
    "dep": "npm i --save chalk js-yaml loglevel sprintf-js yargs node-rfc abap-value-help",
    "devDep": "npm i --save-dev @types/node @types/js-yaml @types/sprintf-js @types/yargs @typescript-eslint/eslint-plugin @typescript-eslint/parser eslint jest typescript",
    "lint": "eslint src/ts",
    "test": "jest tests --detectOpenHandles",
    "ts": "tsc -p src/ts && cp -r src/configuration dist/."
  },
  "dependencies": {
    "abap-value-help": "^2.4.0",
    "chalk": "^5.0.1",
    "js-yaml": "^4.1.0",
    "loglevel": "^1.8.0",
    "node-rfc": "^2.7.0",
    "sprintf-js": "^1.1.2",
    "yargs": "^17.5.1"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^18.7.5",
    "@types/sprintf-js": "^1.1.2",
    "@types/yargs": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.33.1",
    "@typescript-eslint/parser": "^5.33.1",
    "eslint": "^8.22.0",
    "jest": "^28.1.3",
    "typescript": "^4.7.4"
  },
  "engines": {
    "node": ">= 14.0"
  },
  "cpu": [
    "!arm"
  ]
}
