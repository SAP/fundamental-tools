{
  "name": "abap-api-tools",
  "version": "2.6.1",
  "description": "ABAP api tools",
  "keywords": [
    "sap",
    "sapcloudplatform",
    "abap",
    "rfc",
    "sapnwrfc",
    "nwrfcsdk",
    "node",
    "nodejs"
  ],
  "homepage": "https://github.com/sap/fundamental-tools",
  "license": "Apache-2.0",
  "author": "SAP",
  "type": "module",
  "main": "dist/abap.js",
  "types": "dist/abap.d.ts",
  "bin": {
    "abap": "dist/abap.js"
  },
  "directories": {
    "doc": "doc",
    "test": "test"
  },
  "files": [
    "package.json",
    "dist"
  ],
  "scripts": {
    "build": "reuse lint && rm -rf dist && npm run ts && npm run lint",
    "lint": "eslint src/ts",
    "test": "jest tests --detectOpenHandles",
    "ts": "tsc && cp -r src/configuration dist/. && chmod +x ./dist/abap.js"
  },
  "dependencies": {
    "abap-value-help": "^2.6.0",
    "chalk": "^5.3.0",
    "js-yaml": "^4.1.0",
    "loglevel": "^1.8.1",
    "node-rfc": "^3.3.0",
    "sprintf-js": "^1.1.2",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@tsconfig/node16": "^16.1.1",
    "@types/jest": "^29.5.4",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^20.5.7",
    "@types/sprintf-js": "^1.1.2",
    "@types/yargs": "^17.0.24",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "eslint": "^8.48.0",
    "jest": "^29.6.4",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": "^16 || ^18 || >= 20"
  }
}